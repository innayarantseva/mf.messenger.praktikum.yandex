{
    "name": "mf.messenger.praktikum.yandex",
    "version": "1.0.0",
    "description": "Самостоятельный учебный проект, выполненный в рамках Яндекс.Практикума",
    "main": "index.html",
    "scripts": {
        "test": "jest",
        "test:coverage": "jest --coverage",
        "build": "tsc -p . && node ./add-js-ext.js dist",
        "postbuild": "npm run copy-static && npm run postcss",
        "start": "npm run build && npm run server",
        "start:dev": "webpack-dev-server",
        "lint": "eslint . && stylelint .",
        "lint:fix": "eslint . --fix",
        "server": "node ./server/server.js",
        "copy-static": "copyfiles -u 1 \"./src/**/*.html\" \"./src/**/*.png\" \"./src/**/*.*tf\" ./dist",
        "postcss": "postcss \"./src/**/*.css\" --base src --dir ./dist",
        "browserify:templator": "browserify \"./src/utils/renderTemplate.ts\" -p [ tsify ] > bundle.js"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run test && npm run lint:fix"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/innayarantseva/mf.messenger.praktikum.yandex.git"
    },
    "author": "Inna Lytkina",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/innayarantseva/mf.messenger.praktikum.yandex/issues"
    },
    "homepage": "https://github.com/innayarantseva/mf.messenger.praktikum.yandex#readme",
    "dependencies": {
        "express": "^4.17.1"
    },
    "devDependencies": {
        "@types/jest": "^26.0.14",
        "@types/node": "^14.11.2",
        "@typescript-eslint/eslint-plugin": "^4.3.0",
        "@typescript-eslint/parser": "^4.3.0",
        "copyfiles": "^2.4.0",
        "eslint": "^7.10.0",
        "html-webpack-plugin": "^4.5.0",
        "husky": "^4.3.0",
        "jest": "^26.4.2",
        "postcss": "^8.1.1",
        "postcss-cli": "^7.1.2",
        "postcss-css-variables": "^0.17.0",
        "postcss-import": "^12.0.1",
        "stylelint": "^13.7.2",
        "ts-jest": "^26.4.1",
        "ts-loader": "^8.0.4",
        "typescript": "^4.0.3",
        "webpack": "^4.44.2",
        "webpack-cli": "^3.3.12",
        "webpack-dev-server": "^3.11.0"
    }
}